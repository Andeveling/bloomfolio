---
import { Image } from "astro:assets";
import { ChevronLeft, Calendar, Clock, Tag } from "@lucide/astro";
import Layout from "./Layout.astro";
import { formatDate, toISODateTime } from "../utils/formats";

interface Props {
  title: string;
  description: string;
  publishDate: Date;
  updatedDate?: Date;
  image: any;
  tags?: string[];
  slug: string;
}

const { title, description, publishDate, updatedDate, image, tags, slug } =
  Astro.props;

// Calculate reading time (rough estimate based on word count)
const content = await Astro.slots.render("default");
const wordCount = content.split(/\s+/).length;
const readingTime = Math.ceil(wordCount / 200); // Average reading speed: 200 words/min
---

<Layout title={title} description={description}>
  <article class="max-w-4xl mx-auto px-6 py-16 min-h-screen">
    <!-- Back button -->
    <div class="mb-12">
      <a 
        href="/blog" 
        class="inline-flex items-center gap-2 text-base text-base-content/60 hover:text-primary transition-all px-4 py-2 rounded-full hover:bg-base-200"
      >
        <ChevronLeft class="size-5" />
        <span class="font-medium">Volver al Blog</span>
        <kbd class="hidden sm:inline-block kbd kbd-sm bg-base-200 border-none ml-3 text-xs rounded-full px-2">Esc</kbd>
      </a>
    </div>

    <!-- Post Header -->
    <header class="mb-16 text-center max-w-3xl mx-auto">
      <div class="flex items-center justify-center gap-3 mb-8">
        {tags && tags.length > 0 && (
          <span class="bg-primary/10 text-primary px-4 py-1.5 rounded-full text-sm font-medium">
            {tags[0]}
          </span>
        )}
        <span class="text-base-content/30 text-lg">•</span>
        <time
          datetime={toISODateTime(publishDate)}
          class="text-base text-base-content/60"
          transition:name={`blog-date-${slug}`}
        >
          {formatDate(publishDate)}
        </time>
      </div>

      <h1
        class="text-5xl sm:text-6xl md:text-7xl font-bold mb-8 tracking-tight text-balance leading-tight"
        transition:name={`blog-title-${slug}`}
      >
        {title}
      </h1>

      <p
        class="text-2xl text-base-content/70 leading-relaxed text-balance font-light"
        transition:name={`blog-description-${slug}`}
      >
        {description}
      </p>

      <!-- Metadata Bar -->
      <div class="flex flex-wrap items-center justify-center gap-8 mt-10 text-base text-base-content/60">
        <div class="flex items-center gap-3">
          <div class="avatar placeholder">
            <div class="bg-primary text-primary-content rounded-full w-10">
              <span class="text-sm font-semibold">AP</span>
            </div>
          </div>
          <span class="font-medium">Andres Parra</span>
        </div>
        <div class="flex items-center gap-2">
          <Clock class="size-5" />
          <span>{readingTime} min de lectura</span>
        </div>
        {updatedDate && (
          <div class="flex items-center gap-2">
            <Calendar class="size-5" />
            <span>Actualizado: {formatDate(updatedDate)}</span>
          </div>
        )}
      </div>
    </header>

    <!-- Featured Image -->
    {
      image && (
        <figure class="mb-20 rounded-3xl overflow-hidden shadow-2xl">
          <Image
            src={image}
            alt={title}
            class="w-full aspect-video object-cover"
            width={1200}
            height={630}
            transition:name={`blog-image-${slug}`}
          />
        </figure>
      )
    }

    <!-- Post Content -->
    <div class="prose-google">
      <slot />
    </div>

    <!-- Divider -->
    <div class="my-20 border-t border-base-content/10"></div>

    <!-- Footer Actions -->
    <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
      <a href="/blog" class="btn btn-lg btn-ghost gap-3 text-base-content/70 hover:text-base-content hover:bg-base-200 rounded-full px-8">
        <ChevronLeft class="size-5" />
        Más publicaciones
      </a>
      
      <button class="btn btn-lg btn-primary gap-3 rounded-full px-8 shadow-lg hover:shadow-xl transition-shadow" onclick="window.scrollTo({top: 0, behavior: 'smooth'})">
        Volver arriba
      </button>
    </div>
  </article>
</Layout>

<script>
  // Add keyboard shortcut for back/esc
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      const backLink = document.querySelector('a[href="/blog"]');
      if (backLink) {
        (backLink as HTMLAnchorElement).click();
      }
    }
  });
</script>
